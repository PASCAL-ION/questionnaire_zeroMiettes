generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["prismaSchemaFolder", "driverAdapters"]
  output          = "../../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(uuid())
  fullName     String
  availability Int
  role         String
  skills       String[]
  motivation   String
  tools        String[]
  githubRepo   String
  email        String   @unique
  createdAt    DateTime @default(now())
}

model Admin {
  id       String   @id @default(uuid())
  email    String   @unique
  password String
  createdAt DateTime @default(now())
}


